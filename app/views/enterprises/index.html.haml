.well

%table.table.table-striped
  %thead
    %tr
      %th 企业名称 
      %th 省份
      %th 城市
      %th 店名
      %th 地址
      %th 经度
      %th 纬度
      %th 电话
      %th 分类
      %th
      %th
      %th
    %tbody
      - @enterprises.each do |enterprise|
        %tr
          %td= enterprise.name
          %td= enterprise.province 
          %td= enterprise.city 
          %td= enterprise.store_name 
          %td= enterprise.address 
          %td= enterprise.longitude 
          %td= enterprise.latitude
          %td= enterprise.tel 
          %td= enterprise.kind 
          %td= link_to '显示', enterprise 
          %td= link_to '编辑', edit_enterprise_path(enterprise) 
          %td= link_to '删除', enterprise, :confirm=> '确定删除吗?', :method=> :delete 
= paginate @enterprises 
