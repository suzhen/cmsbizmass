.span4
  #mapTab
    %ul.nav.nav-tabs#chooseTab
      %li.active
        %a{:href=>"#tab1","data-toggle"=>"tab"} 按拼音检索城市
      %li 
        %a{:href=>"#tab2","data-toggle"=>"tab"} 按省份检索城市
    .tab-content
      .tab-pane.active#tab1
        %ul
          - @cities_char.each do |char|
            %li
              =raw "<abbr title='以#{char}拼音开头的城市'>#{char}</abbr>&nbsp;"
              - @cities1[char].each do |city| 
                =link_to(city,"#")+" "
      .tab-pane#tab2
        %ul
          - @cities2.each do |key,value|
            %li
              =raw "<abbr title='#{key}的城市'>#{key}</abbr>"
              - value.each do |city|
                =link_to(city,"#tab2")+" "
.span8
  #mapContainer
    .well
    #mapObj.view{:style=>"height:800px"}







