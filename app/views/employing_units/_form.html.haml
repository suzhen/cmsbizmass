= simple_form_for(@employing_unit,:html=>{:class=>'form-horizontal'}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :body,:input_html=>{:rows=>14,:class=>"span8"}
    = f.input :address
    = f.input :tel
    = f.input :linkman
    = f.input :email

  .form-actions
    = f.button :submit
