%ul.nav.nav-list
  - if @controller_name=="enterprises"
    %li.nav-header
      %h4 企业管理
    - if @action_name=="index"
      %li.active
        =link_to "企业列表",enterprises_path
    - else
      %li
        =link_to "企业列表",enterprises_path
    - if @action_name=="new"
      %li.active
        =link_to '新增企业', new_enterprise_path
    - else
      %li
        =link_to '新增企业', new_enterprise_path
    - if @action_name=="edit"
      %li.active
        =link_to '编辑企业','#' 
    - if @action_name=="show"
      %li.active  
        =link_to '查看企业','#'
  - if @controller_name=="records"
    %li.nav-header
      %h4 系统管理
    -if @action_name.include? "contact"
      %li.active
        =link_to "联系方式","/manage/contact"
    - else
      %li
        =link_to "联系方式","/manage/contact"
