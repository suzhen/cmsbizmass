%ul.nav.nav-list
  - if @controller_name=="enterprises"
    %li.nav-header
      %h4 企业管理
    - if @action_name=="index"
      %li.active
        =link_to "企业列表",enterprises_path
    - else
      %li
        =link_to "企业列表",enterprises_path
    - if @action_name=="new"
      %li.active
        =link_to '新增企业', new_enterprise_path
    - else
      %li
        =link_to '新增企业', new_enterprise_path
    - if @action_name=="edit"
      %li.active
        =link_to '编辑企业','#' 
    - if @action_name=="show"
      %li.active  
        =link_to '查看企业','#'
  - if @controller_name=="records"
    %li.nav-header
      %h4 系统管理
    -if @action_name.include? "contact"
      %li.active
        =link_to "联系方式","/manage/contact"
    - else
      %li
        =link_to "联系方式","/manage/contact"
  - if @controller_name=="categories"
    %li.nav-header
      %h4 新闻发布
      = hidden_field_tag :category_tree,@ztree_data
    -if @controller_name=="categories"&& @action_name=="index"
      %li.active
        =link_to "新闻分类列表","#"
    - else
      %li
        =link_to "新闻分类列表","/manage/categories"
    -if @controller_name=="categories"&& (@action_name=="new"||@action_name=="create")
      %li.active
        =link_to "创建新闻分类","#"
    - else
      %li
        =link_to "创建新闻分类",new_category_path
    -if @controller_name=="categories"&& @action_name=="show"
      %li.active
        =link_to "查看新闻分类","#"
    -if @controller_name=="categories"&& @action_name=="edit"
      %li.active
        =link_to "编辑新闻分类","#"


